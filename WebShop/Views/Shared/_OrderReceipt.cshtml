    <p style="font-weight:bold">Personal Details</p>
    <div>
        <p>@Model.UserDetails.FirstName  @Model.UserDetails.LastName</p>
        <p>@Model.UserDetails.Street</p>
        <p>@Model.UserDetails.ZipCode, @Model.UserDetails.City</p>
    </div>

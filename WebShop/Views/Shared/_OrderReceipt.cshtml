    @if (@Model.ListCartProduct.Count != 0)
    {
        <table style="width: 65%;border:solid" class="cart-font">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var group in Model.ListCartProduct.GroupBy(p => p.ProductId))
                {
                    <tr>
                        <td>
                            @group.First().ProductName
                        </td>

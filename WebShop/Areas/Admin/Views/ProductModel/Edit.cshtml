@model WebShop.Models.ProductModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Product</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" class="editProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />
            <input type="hidden" asp-for="ImageName" />
            <div class="form-group">
                <label asp-for="ProductName" class="control-label">Product Name</label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Description</label>
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @rows = 4 })
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<hr />
<h4>Product Image</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="UploadImage" enctype="multipart/form-data">
            <input type="file" asp-for="ImageName" accept="image/x-png,image/gif,image/jpeg">
            <input type="hidden" asp-for="ImageName">
            <input type="hidden" asp-for="Description">
            <input type="hidden" asp-for="ProductId">
            <input type="hidden" asp-for="ProductName">
            <input type="hidden" asp-for="Price">
            <br>
            <input type="submit" value="Save" class="btn btn-default" />
        </form>
    </div>
</div>
<br>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
